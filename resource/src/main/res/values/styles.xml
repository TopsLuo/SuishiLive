<resources>

    <style name="NavigationTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dimen_0</item>
        <!--<item name="android:textColor">@color/navigation_text_color</item>-->
        <item name="android:button">@null</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/font_size_22.5</item>
    </style>

    <style name="TabLayoutTextStyle2">
        <item name="android:textSize">@dimen/font_size_24</item>
    </style>

    <style name="TravelTheme">
        <item name="android:layout_width">@dimen/dimen_0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dimen_0</item>
        <!--<item name="android:textColor">@color/navigation_text_color</item>-->
        <item name="android:button">@null</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 去黑边 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置是否可滑动 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 设置是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景 -->
        <item name="android:background">@null</item>
        <!-- 窗口背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Widget.EditText.White" parent="@android:style/Widget.EditText">
        <item name="android:textSize" >@dimen/dimen_23</item>
        <item name="android:textColor" >@color/coler_732739</item>
    </style>
</resources>
